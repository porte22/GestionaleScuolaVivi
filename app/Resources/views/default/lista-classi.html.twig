{% extends 'base.html.twig' %}

{% block body %}

    <table class="table">
        <thead class="thead-light">
        <tr>

            <th scope="col">Sezione </th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for classe in classi %}
            <tr>
                <td scope="row">{{ classe.anno ~ classe.sezione|upper }}</td>
                <td><a href="{{ path('modifica-classe',{'sezione':classe.sezione,'anno':classe.anno}) }}" class="btn btn-success">Modifica</a><a type="button" class="btn btn-danger">Elimina</a></td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <hr />
    <a href="{{ path('modifica-classe') }}" class="btn btn-primary">Aggiungi classe</a>

{% endblock %}

{% block stylesheets %}

{% endblock %}
